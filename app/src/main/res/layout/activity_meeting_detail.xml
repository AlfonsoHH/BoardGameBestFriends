<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.meetingdetail.MeetingDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/meetingDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        app:titleTextColor="@color/darkGrey"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:id="@+id/meetingDetailFLall"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="135dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/meetingDetailTVmeetingDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Meeting Title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/meetingDetailTVmeetingDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2sp"
                    tools:text="Meeting Description. Meeting Description. This is a short description of the meeting"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/meetingDetailTVhour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="16:30"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4.5dp"/>

                <TextView
                    android:id="@+id/meetingDetailTVdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="02/02/18"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4.5dp"/>

                <TextView
                    android:id="@+id/meetingDetailTVvacants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="3 VACANTS"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:orientation="vertical"
                android:paddingLeft="90dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/meetingDetailTVgameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="Game Title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/meetingDetailPlayers"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/meetingDetailTVplayers"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                tools:text="2-4"
                                android:textAlignment="textEnd"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/meetingDetailDuration"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/meetingDetailTVduration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                tools:text="120"
                                android:textAlignment="textEnd"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="@string/meetingDetailRating"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <RatingBar
                            android:id="@+id/meetingDetailRatingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:numStars="10"
                            android:rating="8"
                            android:stepSize=".5" />

                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/meetingDetailIVgame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/standar_game" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="90dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/meetingDetailTVplaceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    tools:text="Place Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="right"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meetingDetailAddress"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meetingDetailTimetable"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/meetingDetailTVaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Pintor Hermenegildo Lanz 7 3B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/meetingDetailTVopenHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="10:00 - 14:00 17:00 - 20:30"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_gravity="right"/>

            <ImageView
                android:id="@+id/meetingDetailIVplace"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/place_icon"
                android:layout_gravity="right"/>

        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/meetingDetailRV"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="65dp">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/activityGameDetailIVphoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/calendar" />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white"
                android:alpha=".8">


                <TextView
                    android:id="@+id/meetingDetailTVjoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/meetingDetailJoin"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBarMeetingDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>