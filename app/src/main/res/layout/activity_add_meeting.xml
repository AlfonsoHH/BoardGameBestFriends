<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alfonsohernandez.boardgamebestfriends.presentation.addmeeting.AddMeetingActivity"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/addMeetingToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        app:titleTextColor="@color/darkGrey"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:id="@+id/addMeetingFLall"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:background="@color/lightGrey"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/addMeetingTVhour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="16:00"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:background="@color/lightGrey"
                    android:gravity="center_vertical|right"
                    android:paddingRight="28dp">

                    <TextView
                        android:id="@+id/addMeetingTVdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="12/12/12"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/addMeetingFLwhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/calendar"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@color/white"
                android:alpha="0.8"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/addMeetingWhen"
                android:textStyle="bold" />


        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/lightGrey"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addMeetingTitle"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="60dp"
                android:layout_height="0dp"/>

            <EditText
                android:id="@+id/addMeetingETtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/addMeetingTitleHint"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                android:maxLength="20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addMeetingDescription"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold"/>

            <View
                android:layout_width="4dp"
                android:layout_height="0dp"/>

        <EditText
            android:id="@+id/addMeetingETdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/addMeetingDescriptionHint"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
            android:maxLength="40"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/addMeetingLLwho"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="36dp"
                android:background="@color/lightGrey"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/addMeetingTVwho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="gone"/>

                <Spinner
                    android:id="@+id/addMeetingSwho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="36dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/lightGrey"
                android:orientation="vertical"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/addMeetingTVwhere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="gone"/>

                <Spinner
                    android:id="@+id/addMeetingSwhere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="36dp"/>

            <LinearLayout
                android:id="@+id/addMeetingLLwhat"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="36dp"
                android:background="@color/lightGrey"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/addMeetingTVwhat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="gone"/>

                <Spinner
                    android:id="@+id/addMeetingSwhat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/addMeetingFLwho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addMeetingIVwho"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/group_icon" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:background="@color/white"
                android:alpha=".8"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addMeetingWho"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/addMeetingFLwhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right">

            <ImageView
                android:id="@+id/addMeetingIVwhere"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/place_icon" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:background="@color/white"
                android:alpha=".8"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addMeetingWhere"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/addMeetingFLwhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/addMeetingIVwhat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/standar_game" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:background="@color/white"
                android:alpha=".8"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addMeetingWhat"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="20dp">

        <CheckBox
            android:id="@+id/addMeetingCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addMeetingIamPlaying" />

    </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBarAddMeeting"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>
