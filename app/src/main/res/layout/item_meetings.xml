<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="90dp"
                    android:layout_height="100dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">


            <LinearLayout
                android:gravity="center"
                android:paddingRight="12dp"
                android:paddingLeft="55dp"
                android:paddingVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightGrey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemMeetingsTVtitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="Meeting Title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVvacants"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        tools:text="3 Vacants"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/itemMeetingsTVdescription"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    tools:text="Meeting Desption of the meeting.Meeting Desption of the meeting."
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/itemMeetingsTVhour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="16:00"
                        android:textAlignment="textStart"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemMeetingsTVdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="12/12/12"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <FrameLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <ImageView
                    android:id="@+id/itemMeetingsImageViewPlace"
                    android:layout_gravity="right"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/place_icon" />

                <ImageView
                    android:id="@+id/itemMeetingsImageViewGame"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/standar_game" />

                <LinearLayout
                    android:id="@+id/itemMeetingsLLhosting"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white"
                    android:alpha="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/itemMeetingsTVopen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingOpen"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVgroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingGroup"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVhosting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingsHosting"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVassisting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingsAssisting"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVhostingAssisting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingsTVhostingAssisting"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVadminHost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingsAdminHost"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVadminPlaying"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingAdminPlaying"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/itemMeetingsTVadminHostPlaying"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingAdminHostPlaying"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>


                    <TextView
                        android:id="@+id/itemMeetingsTVadmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/itemMeetingAdmin"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>