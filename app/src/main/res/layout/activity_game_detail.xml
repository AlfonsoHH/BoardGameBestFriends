<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.alfonsohernandez.boardgamebestfriends.presentation.gamedetail.GameDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/gameDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        app:titleTextColor="@color/darkGrey"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gameDetailFLall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/lightGrey"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameDetailTVtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gameDetailTVdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="In Blood Rage, each player controls their own Viking clanâ€™s warriors, leader, and ship."
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="6"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/lightGrey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/lightGrey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/lightGrey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:paddingHorizontal="4dp"
            android:paddingVertical="12dp"
            android:orientation="horizontal">

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/gameDetailIVuser"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/class_profile" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/gameDetailIVgroup"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/group_icon" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/gameDetailIVplace"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/place_icon" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/gameDetailPlayers"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gameDetailDuration"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/gameDetailTVnumPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    tools:text="2-4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/gameDetailTVduration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    tools:text="120-180"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/gameDetailRatingBar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:numStars="5"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="70dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/gameDetailIVphoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/standar_game" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="280dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/gameDetailIVmeetings"
                android:layout_gravity="center_horizontal"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/calendar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:alpha=".8"
                android:padding="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meetings"
                    android:textAlignment="center"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBarGameDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>
